{
  "compilerOptions": {
    "lib": ["es6", "DOM", "DOM.Iterable", "ESNext"],
    "target": "ES6", 
    "module": "ESNext", 
    "moduleResolution": "node",
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,     
    "strict": true, 
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./esm"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules"]
}
